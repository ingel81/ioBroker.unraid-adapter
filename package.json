{
  "name": "iobroker.unraid-adapter",
  "version": "0.2.1",
  "description": "unraid-adapter",
  "author": {
    "name": "ingel81",
    "email": "ingel81@sgeht.net"
  },
  "homepage": "https://github.com/ingel81/ioBroker.unraid-adapter",
  "license": "MIT",
  "keywords": [
    "unraid",
    "monitoring",
    "unraid-api"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:ingel81/ioBroker.unraid-adapter.git"
  },
  "engines": {
    "node": ">= 22"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "undici": "^5.29.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/adapter-react": "^2.0.22",
    "@iobroker/testing": "^5.1.1",
    "@material-ui/core": "^4.12.4",
    "@tsconfig/node22": "^22.0.2",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.6",
    "@types/proxyquire": "^1.3.31",
    "@types/react": "^17.0.88",
    "@types/react-dom": "^17.0.26",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "mocha": "^11.7.2",
    "prettier": "^3.6.2",
    "proxyquire": "^2.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sinon": "^21.0.0",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build/",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "build/"
  ],
  "scripts": {
    "prebuild": "rimraf admin/build",
    "build": "npm run build:ts && build-adapter react",
    "build:ts": "tsc -p tsconfig.build.json",
    "watch": "build-adapter react --watch",
    "watch:ts": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
    "prebuild:react": "rimraf admin/build",
    "build:react": "build-adapter react",
    "watch:react": "build-adapter react --watch",
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.{js,ts},*.test.{js,ts},test/**/test!(PackageFiles|Startup).{js,ts}}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/ingel81/ioBroker.unraid-adapter/issues"
  },
  "readmeFilename": "README.md"
}
